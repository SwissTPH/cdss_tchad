<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms">
  <h:head>
    <h:title>Edit Person</h:title>
    <model>
      <itext>
        <translation lang="en">
          <text id="/data/person/ephemeral_dob/age_months:jr:constraintMsg">
            <value>Months must between 0 and 11</value>
          </text>
          <text id="/data/person/ephemeral_dob/age_years:jr:constraintMsg">
            <value>Age must be between 0 and 130</value>
          </text>
          <text id="/data/person/ephemeral_dob/dob_calendar:jr:constraintMsg">
            <value>Date must be before today</value>
          </text>
          <text id="/data/person/p_ref:jr:constraintMsg">
            <value>-</value>
          </text>
          <text id="/data/person/p_ref:jr:requiredMsg">
            <value>-</value>
          </text>
        </translation>
        <translation lang="fr">
          <text id="/data/person/ephemeral_dob/age_months:jr:constraintMsg">
            <value>-</value>
          </text>
          <text id="/data/person/ephemeral_dob/age_years:jr:constraintMsg">
            <value>-</value>
          </text>
          <text id="/data/person/ephemeral_dob/dob_calendar:jr:constraintMsg">
            <value>-</value>
          </text>
          <text id="/data/person/p_ref:jr:constraintMsg">
            <value>La référence entrée n'est pas valide</value>
          </text>
          <text id="/data/person/p_ref:jr:requiredMsg">
            <value>Afin de retrouver le cas une fois les résultats de test disponible</value>
          </text>
        </translation>
      </itext>
      <instance>
        <data id="contact:person:edit" prefix="J1!contact:person:edit!" delimiter="#" version="2023-06-16  10-09">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <user>
              <contact_id/>
              <facility_id/>
              <name/>
            </user>
          </inputs>
          <person>
            <parent/>
            <_id/>
            <type>person</type>
            <role/>
            <p_ref/>
            <short_name/>
            <name/>
            <date_of_birth/>
            <date_of_birth_method/>
            <ephemeral_dob>
              <dob_calendar/>
              <age_label/>
              <age_years/>
              <age_months/>
              <dob_method/>
              <dob_approx/>
              <dob_raw/>
              <dob_iso/>
              <dob_debug/>
            </ephemeral_dob>
            <sex/>
            <p_type/>
            <o_type/>
            <o_comment/>
            <a_type/>
            <notes/>
            <meta tag="hidden">
              <created_by/>
              <created_by_person_uuid/>
              <created_by_place_uuid/>
              <last_edited_by/>
              <last_edited_by_person_uuid/>
              <last_edited_by_place_uuid/>
            </meta>
          </person>
          <init>
            <person_name/>
            <person_place_name/>
            <person_parent/>
            <type/>
            <name/>
            <note_place/>
            <change_parent>false</change_parent>
            <edited_place_type/>
            <id_district_hospital/>
            <id_health_center/>
            <id_clinic/>
          </init>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </data>
      </instance>
      <bind nodeset="/data/inputs" relevant="false()"/>
      <bind nodeset="/data/inputs/user/contact_id" type="string"/>
      <bind nodeset="/data/inputs/user/facility_id" type="string"/>
      <bind nodeset="/data/inputs/user/name" type="string"/>
      <bind nodeset="/data/init/person_name" type="string" calculate="../../person/name"/>
      <bind nodeset="/data/init/person_place_name" type="string" calculate="../name"/>
      <bind nodeset="/data/init/person_parent" type="string" calculate=" /data/person/parent " readonly="true()"/>
      <bind nodeset="/data/init/type" type="string"/>
      <bind nodeset="/data/init/name" type="string"/>
      <bind nodeset="/data/init/note_place" readonly="true()" type="string"/>
      <bind nodeset="/data/init/change_parent" type="select1" required="true()"/>
      <bind nodeset="/data/init/edited_place_type" type="select1" required="true()" relevant="selected( /data/init/change_parent , 'true')"/>
      <bind nodeset="/data/init/id_district_hospital" type="db:district_hospital" required="true()" relevant="selected( /data/init/change_parent , 'true') and selected( /data/init/edited_place_type , 'district_hospital')"/>
      <bind nodeset="/data/init/id_health_center" type="db:health_center" required="true()" relevant="selected( /data/init/change_parent , 'true') and selected( /data/init/edited_place_type , 'health_center')"/>
      <bind nodeset="/data/init/id_clinic" type="db:clinic" required="true()" relevant="selected( /data/init/change_parent , 'true') and selected( /data/init/edited_place_type , 'clinic')"/>
      <bind nodeset="/data/person/parent" type="string" calculate="coalesce(coalesce(coalesce( /data/init/id_district_hospital ,  /data/init/id_health_center ),  /data/init/id_clinic ), /data/person/parent )"/>
      <bind nodeset="/data/person/_id" type="string" readonly="true()"/>
      <bind nodeset="/data/person/type" type="string" readonly="true()"/>
      <bind nodeset="/data/person/role" type="select1"/>
      <bind nodeset="/data/person/p_ref" type="int" constraint="(. - int(. div 10)*10) = (int(. div 10) mod 7)" jr:requiredMsg="jr:itext('/data/person/p_ref:jr:requiredMsg')" relevant=" /data/person/role ='patient'" jr:constraintMsg="jr:itext('/data/person/p_ref:jr:constraintMsg')"/>
      <bind nodeset="/data/person/short_name" type="string" relevant=" /data/person/role ='other'"/>
      <bind nodeset="/data/person/name" type="string" calculate="coalesce(int( /data/person/p_ref ), /data/person/short_name )"/>
      <bind nodeset="/data/person/date_of_birth" type="string" required="true()" calculate="../ephemeral_dob/dob_iso"/>
      <bind nodeset="/data/person/date_of_birth_method" type="string" calculate="../ephemeral_dob/dob_method"/>
      <bind nodeset="/data/person/ephemeral_dob/dob_calendar" type="date" constraint=". &lt;= now()" required="true()" relevant="not(selected(../dob_method,'approx'))" jr:constraintMsg="jr:itext('/data/person/ephemeral_dob/dob_calendar:jr:constraintMsg')"/>
      <bind nodeset="/data/person/ephemeral_dob/age_label" readonly="true()" type="string" relevant="selected(../dob_method,'approx')"/>
      <bind nodeset="/data/person/ephemeral_dob/age_years" type="int" constraint=". &gt;= 0 and . &lt;= 130" required="true()" relevant="selected(../dob_method,'approx')" jr:constraintMsg="jr:itext('/data/person/ephemeral_dob/age_years:jr:constraintMsg')"/>
      <bind nodeset="/data/person/ephemeral_dob/age_months" type="int" constraint=". &gt;= 0 and . &lt;= 11" relevant="selected(../dob_method,'approx')" jr:constraintMsg="jr:itext('/data/person/ephemeral_dob/age_months:jr:constraintMsg')"/>
      <bind nodeset="/data/person/ephemeral_dob/dob_method" type="select"/>
      <bind nodeset="/data/person/ephemeral_dob/dob_approx" type="string" calculate="add-date(today(), 0- /data/person/ephemeral_dob/age_years , 0- /data/person/ephemeral_dob/age_months )"/>
      <bind nodeset="/data/person/ephemeral_dob/dob_raw" type="string" calculate="if(not(selected( ../dob_method,'approx')), 
../dob_calendar,
../dob_approx)"/>
      <bind nodeset="/data/person/ephemeral_dob/dob_iso" type="string" calculate="format-date-time(../dob_raw,&quot;%Y-%m-%d&quot;)"/>
      <bind nodeset="/data/person/ephemeral_dob/dob_debug" readonly="true()" type="string" relevant="false()"/>
      <bind nodeset="/data/person/sex" type="select1"/>
      <bind nodeset="/data/person/p_type" type="select1" relevant=" /data/person/role ='patient'"/>
      <bind nodeset="/data/person/o_type" type="select1" relevant=" /data/person/role ='patient'"/>
      <bind nodeset="/data/person/o_comment" type="string" relevant=" /data/person/o_type ='cam' or  /data/person/o_type ='vge' or  /data/person/o_type ='frk'"/>
      <bind nodeset="/data/person/a_type" type="select1" relevant=" /data/person/role ='patient'"/>
      <bind nodeset="/data/person/notes" type="string"/>
      <bind nodeset="/data/person/meta/created_by" type="string" readonly="true()"/>
      <bind nodeset="/data/person/meta/created_by_person_uuid" type="string" readonly="true()"/>
      <bind nodeset="/data/person/meta/created_by_place_uuid" type="string" readonly="true()"/>
      <bind nodeset="/data/person/meta/last_edited_by" type="string" calculate="../../../inputs/user/name"/>
      <bind nodeset="/data/person/meta/last_edited_by_person_uuid" type="string" calculate="../../../inputs/user/contact_id"/>
      <bind nodeset="/data/person/meta/last_edited_by_place_uuid" type="string" calculate="../../../inputs/user/facility_id"/>
      <bind nodeset="/data/meta/instanceID" type="string" readonly="true()" calculate="concat('uuid:', uuid())"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group ref="/data/inputs">
      <label></label>
      <group ref="/data/inputs/user">
        <label></label>
        <input ref="/data/inputs/user/contact_id">
          <label>Identifiant de l'utilisateur</label>
        </input>
        <input ref="/data/inputs/user/facility_id">
          <label>Identifiant du centre</label>
        </input>
        <input ref="/data/inputs/user/name">
          <label>Nom</label>
        </input>
      </group>
    </group>
    <group appearance="field-list" ref="/data/init">
      <label></label>
      <input appearance="db-object hidden" ref="/data/init/person_parent">
        <label>Place actuelle</label>
      </input>
      <input appearance="hidden" ref="/data/init/type">
        <label></label>
      </input>
      <input appearance="hidden" ref="/data/init/name">
        <label></label>
      </input>
      <input ref="/data/init/note_place">
        <label><output value=" /data/init/person_name "/>&amp;nbsp;appartient à **<output value=" /data/init/person_place_name "/>**</label>
      </input>
      <select1 appearance="columns-pack" ref="/data/init/change_parent">
        <label>Voulez-vous déplacer cette personne vers une autre place ?</label>
        <item>
          <label>Oui</label>
          <value>true</value>
        </item>
        <item>
          <label>Non</label>
          <value>false</value>
        </item>
      </select1>
      <select1 appearance="columns-pack" ref="/data/init/edited_place_type">
        <label>Rechercher par type de place</label>
        <item>
          <label>Hôpital de District</label>
          <value>district_hospital</value>
        </item>
        <item>
          <label>Centre de santé</label>
          <value>health_center</value>
        </item>
        <item>
          <label>Dispensaire</label>
          <value>clinic</value>
        </item>
      </select1>
      <input appearance="db-object bind-id-only" ref="/data/init/id_district_hospital">
        <label>Choisissez le district</label>
      </input>
      <input appearance="db-object bind-id-only" ref="/data/init/id_health_center">
        <label>Choisissez le centre de santé</label>
      </input>
      <input appearance="db-object bind-id-only" ref="/data/init/id_clinic">
        <label>Choisissez la zone</label>
      </input>
    </group>
    <group appearance="field-list" ref="/data/person">
      <label>Modifier personne</label>
      <select1 ref="/data/person/role">
        <label>Rôle</label>
        <item>
          <label>Patient</label>
          <value>patient</value>
        </item>
        <item>
          <label>Consultant/medecin</label>
          <value>other</value>
        </item>
      </select1>
      <input ref="/data/person/p_ref">
        <label>Référence à enregister</label>
        <hint>Afin de retrouver le cas une fois les résultats de test disponible</hint>
      </input>
      <input ref="/data/person/short_name">
        <label>Nom de la personne</label>
      </input>
      <group ref="/data/person/ephemeral_dob">
        <input ref="/data/person/ephemeral_dob/dob_calendar">
          <label>Age</label>
        </input>
        <input ref="/data/person/ephemeral_dob/age_label">
          <label>**Veillez entrer la date de naissance**</label>
        </input>
        <input ref="/data/person/ephemeral_dob/age_years">
          <label>Années</label>
        </input>
        <input ref="/data/person/ephemeral_dob/age_months">
          <label>Mois</label>
        </input>
        <select appearance="columns" ref="/data/person/ephemeral_dob/dob_method">
          <item>
            <label>Date de naissance inconnue</label>
            <value>approx</value>
          </item>
        </select>
        <input ref="/data/person/ephemeral_dob/dob_debug">
          <label>DOB Approx: <output value=" /data/person/ephemeral_dob/dob_approx "/>
DOB Calendar: <output value=" /data/person/ephemeral_dob/dob_calendar "/>
DOB ISO: <output value=" /data/person/ephemeral_dob/dob_iso "/></label></input>
      </group>
      <select1 appearance="columns" ref="/data/person/sex">
        <label>Quel est le sexe de la personne ?</label>
        <item>
          <label>Féminin</label>
          <value>female</value>
        </item>
        <item>
          <label>Masculin</label>
          <value>male</value>
        </item>
      </select1>
      <select1 ref="/data/person/p_type">
        <label>Le patient est un:</label>
        <item>
          <label>Réfugié</label>
          <value>refugee</value>
        </item>
        <item>
          <label>Spontané</label>
          <value>spontanous</value>
        </item>
        <item>
          <label>Retourné</label>
          <value>returned</value>
        </item>
        <item>
          <label>Autochtone</label>
          <value>local</value>
        </item>
        <item>
          <label>Nomade</label>
          <value>nomad</value>
        </item>
      </select1>
      <select1 ref="/data/person/o_type">
        <label>Provenance du patient:</label>
        <item>
          <label>Camp</label>
          <value>cam</value>
        </item>
        <item>
          <label>Village/Quartier</label>
          <value>vge</value>
        </item>
        <item>
          <label>Ferrick</label>
          <value>frk</value>
        </item>
      </select1>
      <input ref="/data/person/o_comment"/>
      <select1 ref="/data/person/a_type">
        <label>Zone du patient:</label>
        <item>
          <label>A</label>
          <value>za</value>
        </item>
        <item>
          <label>B</label>
          <value>zb</value>
        </item>
        <item>
          <label>Hors zone</label>
          <value>zh</value>
        </item>
        <item>
          <label>Nomade</label>
          <value>nmd</value>
        </item>
      </select1>
      <input appearance="multiline" ref="/data/person/notes">
        <label>Notes</label>
      </input>
      <group appearance="hidden" ref="/data/person/meta">
        <label></label>
      </group>
    </group>
  </h:body>
</h:html>
